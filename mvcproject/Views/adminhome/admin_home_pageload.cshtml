@model mvcproject.Models.jobinsert
@{
    ViewBag.Title = "Insert Job";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f4f6f9;
    }

    h2 {
        text-align: center;
        color: #2c3e50;
        margin-bottom: 25px;
    }

    .job-card {
        width: 600px;
        margin: auto;
        background: #ffffff;
        padding: 25px;
        border-radius: 8px;
        box-shadow: 0 4px 10px rgba(0,0,0,0.1);
    }

    .form-group {
        margin-bottom: 15px;
    }

        .form-group label {
            font-weight: bold;
            color: #333;
            display: block;
            margin-bottom: 5px;
        }

    .form-control {
        width: 100%;
        padding: 8px;
        border-radius: 4px;
        border: 1px solid #ccc;
        font-size: 14px;
    }

        .form-control:focus {
            outline: none;
            border-color: #007bff;
        }

    .validation {
        color: red;
        font-size: 12px;
    }

    .submit-btn {
        background-color: #007bff;
        color: white;
        border: none;
        padding: 10px 18px;
        border-radius: 4px;
        font-size: 15px;
        cursor: pointer;
    }

        .submit-btn:hover {
            background-color: #0056b3;
        }

    .success-msg {
        margin-top: 10px;
        font-weight: bold;
        color: green;
    }
</style>

<h2>Insert Job</h2>

<div class="job-card">
    @using (Html.BeginForm("job_insertclick", "adminhome", FormMethod.Post))
    {
        <div class="form-group">
            <label>Job Title</label>
            @Html.TextBoxFor(m => m.jtitle, new { @class = "form-control" })
            <div class="validation">@Html.ValidationMessageFor(m => m.jtitle)</div>
        </div>

        <div class="form-group">
            <label>Job Description</label>
            @Html.TextAreaFor(m => m.jdesc, new { @class = "form-control", rows = 3 })
            <div class="validation">@Html.ValidationMessageFor(m => m.jdesc)</div>
        </div>

        <div class="form-group">
            <label>Location</label>
            @Html.TextBoxFor(m => m.jloc, new { @class = "form-control" })
            <div class="validation">@Html.ValidationMessageFor(m => m.jloc)</div>
        </div>

        <div class="form-group">
            <label>Experience</label>
            @Html.TextBoxFor(m => m.jexperience, new { @class = "form-control" })
            <div class="validation">@Html.ValidationMessageFor(m => m.jexperience)</div>
        </div>

        <div class="form-group">
            <label>Skills</label>
            @Html.TextBoxFor(m => m.jskill, new { @class = "form-control" })
            <div class="validation">@Html.ValidationMessageFor(m => m.jskill)</div>
        </div>

        <div class="form-group">
            <label>Created Date</label>
            @Html.TextBoxFor(m => m.cdate, new { @class = "form-control", type = "date" })
            <div class="validation">@Html.ValidationMessageFor(m => m.cdate)</div>
        </div>

        <div class="form-group">
            <label>End Date</label>
            @Html.TextBoxFor(m => m.edate, new { @class = "form-control", type = "date" })
            <div class="validation">@Html.ValidationMessageFor(m => m.edate)</div>
        </div>

        <div class="form-group">
            <label>Passout Year</label>
            @Html.TextBoxFor(m => m.passoutyear, new { @class = "form-control", type = "number" })
            <div class="validation">@Html.ValidationMessageFor(m => m.passoutyear)</div>
        </div>

        <div class="form-group">
            <label>Qualification</label>
            @Html.TextBoxFor(m => m.jqua, new { @class = "form-control" })
            <div class="validation">@Html.ValidationMessageFor(m => m.jqua)</div>
        </div>

        <input type="submit" value="Insert Job" class="submit-btn" />

        <div class="success-msg">
            @Html.DisplayFor(m => m.msg)
        </div>
    }
</div>
