@model mvcproject.Models.admininsert
@{
    ViewBag.Title = "insertadmin_page_load";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f4f6f9;
    }

    h2 {
        text-align: center;
        color: #2c3e50;
        margin-bottom: 25px;
        text-transform: capitalize;
    }

    .admin-card {
        width: 600px;
        margin: auto;
        background: #ffffff;
        padding: 25px;
        border-radius: 8px;
        box-shadow: 0 4px 10px rgba(0,0,0,0.1);
    }

    .form-group {
        margin-bottom: 15px;
    }

        .form-group label {
            font-weight: bold;
            color: #333;
            display: block;
            margin-bottom: 5px;
        }

        .form-group input[type="text"],
        .form-group input[type="password"],
        .form-group textarea {
            width: 100%;
            padding: 8px;
            border-radius: 4px;
            border: 1px solid #ccc;
            font-size: 14px;
        }

        .form-group textarea {
            resize: vertical;
            height: 70px;
        }

    .validation {
        color: red;
        font-size: 12px;
    }

    .submit-btn {
        background-color: #2c3e50;
        color: white;
        border: none;
        padding: 10px 18px;
        border-radius: 4px;
        font-size: 15px;
        cursor: pointer;
    }

        .submit-btn:hover {
            background-color: #1a252f;
        }

    .success-msg {
        margin-top: 10px;
        font-weight: bold;
        color: green;
    }
</style>

<h2>Insert Company Details</h2>

<div class="admin-card">
    @using (Html.BeginForm("insertadmin_click", "adminreg", FormMethod.Post))
    {
        <div class="form-group">
            <label>Company Name</label>
            @Html.TextBoxFor(m => m.name)
            <div class="validation">@Html.ValidationMessageFor(m => m.name)</div>
        </div>

        <div class="form-group">
            <label>Description</label>
            @Html.TextAreaFor(m => m.description)
            <div class="validation">@Html.ValidationMessageFor(m => m.description)</div>
        </div>

        <div class="form-group">
            <label>Email</label>
            @Html.TextBoxFor(m => m.email)
            <div class="validation">@Html.ValidationMessageFor(m => m.email)</div>
        </div>

        <div class="form-group">
            <label>Address</label>
            @Html.TextAreaFor(m => m.address)
            <div class="validation">@Html.ValidationMessageFor(m => m.address)</div>
        </div>

        <div class="form-group">
            <label>Phone</label>
            @Html.TextBoxFor(m => m.phone)
            <div class="validation">@Html.ValidationMessageFor(m => m.phone)</div>
        </div>

        <div class="form-group">
            <label>Username</label>
            @Html.TextBoxFor(m => m.username)
        </div>

        <div class="form-group">
            <label>Password</label>
            @Html.PasswordFor(m => m.pass)
        </div>

        <div class="form-group">
            <label>Confirm Password</label>
            @Html.PasswordFor(m => m.cpassword)
            <div class="validation">@Html.ValidationMessageFor(m => m.cpassword)</div>
        </div>

        <input type="submit" value="Register Company" class="submit-btn" />

        <div class="success-msg">
            @Html.DisplayFor(m => m.adminmsg)
        </div>
    }
</div>


