@model mvcproject.Models.logincls
@{
    ViewBag.Title = "login_pageload";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .login-container {
        width: 350px;
        margin: 80px auto;
        padding: 25px;
        background: #ffffff;
        border-radius: 8px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        font-family: Arial, sans-serif;
    }

        .login-container h2 {
            text-align: center;
            margin-bottom: 20px;
            color: #333;
        }

    .form-group {
        margin-bottom: 15px;
    }

        .form-group label {
            display: block;
            font-weight: bold;
            margin-bottom: 5px;
            color: #555;
        }

        .form-group input[type="text"],
        .form-group input[type="password"] {
            width: 100%;
            padding: 8px;
            border: 1px solid #ccc;
            border-radius: 4px;
            font-size: 14px;
        }

        .form-group input:focus {
            outline: none;
            border-color: #007bff;
        }

    .validation {
        color: red;
        font-size: 12px;
    }

    .login-btn {
        width: 100%;
        padding: 10px;
        background-color: #007bff;
        color: #fff;
        border: none;
        border-radius: 4px;
        font-size: 15px;
        cursor: pointer;
    }

        .login-btn:hover {
            background-color: #0056b3;
        }

    .message {
        margin-top: 10px;
        text-align: center;
        color: green;
        font-weight: bold;
    }
</style>

<div class="login-container">
    <h2>User Login</h2>

    @using (Html.BeginForm("login_click", "ulogin", FormMethod.Post))
    {
        <div class="form-group">
            <label>Username</label>
            @Html.TextBoxFor(m => m.username)
            <div class="validation">
                @Html.ValidationMessageFor(m => m.username)
            </div>
        </div>

        <div class="form-group">
            <label>Password</label>
            @Html.PasswordFor(m => m.password)
            <div class="validation">
                @Html.ValidationMessageFor(m => m.password)
            </div>
        </div>

        <input type="submit" value="Login" class="login-btn" />

        <div class="message">
            @Html.DisplayFor(m => m.msg)
        </div>
    }
</div>
