@model mvcproject.Models.jobapplymodel

@{
    ViewBag.Title = "Apply Job";
    var job = ViewBag.job;
}

<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f4f6f9;
    }

    h2 {
        text-align: center;
        color: #2c3e50;
        margin-bottom: 20px;
    }

    /* Job Details Card */
    .job-card {
        background: #fff;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 4px 10px rgba(0,0,0,0.1);
        margin-bottom: 25px;
    }

    .job-table {
        width: 100%;
        border-collapse: collapse;
    }

        .job-table th {
            width: 25%;
            background-color: #2c3e50;
            color: #fff;
            padding: 10px;
            text-align: left;
            font-size: 14px;
        }

        .job-table td {
            padding: 10px;
            font-size: 14px;
            background-color: #fdfdfd;
            border-bottom: 1px solid #ddd;
        }

    /* Apply Form */
    .apply-card {
        background: #fff;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 4px 10px rgba(0,0,0,0.1);
    }

    .form-group label {
        font-weight: bold;
        color: #333;
    }

    .form-control {
        width: 100%;
        padding: 8px;
        border-radius: 4px;
        border: 1px solid #ccc;
    }

    .btn {
        padding: 8px 16px;
        border-radius: 4px;
        text-decoration: none;
        font-size: 14px;
    }

    .btn-success {
        background-color: #28a745;
        color: white;
        border: none;
    }

        .btn-success:hover {
            background-color: #218838;
        }

    .btn-secondary {
        background-color: #6c757d;
        color: white;
    }

        .btn-secondary:hover {
            background-color: #545b62;
            color: white;
        }
</style>

<h2>Apply Job</h2>

<div class="job-card">
    <table class="job-table">
        <tr><th>Company</th><td>@job.company_name</td></tr>
        <tr><th>Description</th><td>@job.company_desc</td></tr>
        <tr><th>Address</th><td>@job.comapany_address</td></tr>
        <tr><th>Email</th><td>@job.company_email</td></tr>
        <tr><th>Phone</th><td>@job.company_phone</td></tr>
        <tr><th>Job Title</th><td>@job.job_title</td></tr>
        <tr><th>Description</th><td>@job.job_desc</td></tr>
        <tr><th>Location</th><td>@job.location</td></tr>
        <tr><th>Experience</th><td>@job.job_experience</td></tr>
        <tr><th>Qualification</th><td>@job.job_qualification</td></tr>
    </table>
</div>

<div class="apply-card">
    @using (Html.BeginForm("Application_submit", "userhome", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.HiddenFor(m => m.job_id)

        <div class="form-group">
            <label>Upload Resume</label>
            @Html.TextBoxFor(m => m.ResumeFile, new
            {
                type = "file",
                @class = "form-control",
                accept = ".pdf,.doc,.docx"
            })
            @Html.ValidationMessageFor(m => m.ResumeFile)
        </div>

        <br />

        <div>
            <button type="submit" class="btn btn-success">Apply</button>
            <a href="@Url.Action("user_home_pageload","userhome")" class="btn btn-secondary">Cancel</a>
        </div>
    }
</div>
