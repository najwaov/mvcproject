@model mvcproject.Models.Jobsearch
@{
    ViewBag.Title = "user_home_pageload";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f5f6fa;
    }

    h2 {
        text-align: center;
        color: #2c3e50;
        margin-bottom: 5px;
    }

    .subtitle {
        text-align: center;
        color: #555;
        margin-bottom: 25px;
    }

    /* Search Card */
    .search-card {
        background: #fff;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 4px 10px rgba(0,0,0,0.1);
        margin-bottom: 30px;
    }

    .search-grid {
        display: grid;
        grid-template-columns: repeat(5, 1fr);
        gap: 15px;
    }

        .search-grid input[type="text"] {
            width: 100%;
            padding: 8px;
            border-radius: 4px;
            border: 1px solid #ccc;
            font-size: 14px;
        }

    .search-btn {
        background-color: navy;
        color: white;
        border: none;
        border-radius: 4px;
        padding: 8px;
        cursor: pointer;
        font-size: 14px;
        width: 100%;
    }

        .search-btn:hover {
            background-color: #001f5f;
        }

    /* Table Styling */
    .job-table {
        width: 100%;
        border-collapse: collapse;
        background: #fff;
        box-shadow: 0 4px 10px rgba(0,0,0,0.1);
        border-radius: 8px;
        overflow: hidden;
    }

        .job-table th {
            background-color: #2c3e50;
            color: #fff;
            padding: 10px;
            font-size: 14px;
            text-align: left;
        }

        .job-table td {
            padding: 10px;
            border-bottom: 1px solid #ddd;
            font-size: 13px;
        }

        .job-table tr:hover {
            background-color: #f1f1f1;
        }

    .apply-btn {
        background-color: #007bff;
        color: white;
        padding: 5px 10px;
        border-radius: 4px;
        text-decoration: none;
        font-size: 13px;
    }

        .apply-btn:hover {
            background-color: #0056b3;
            color: white;
        }
</style>

<h2>New Job Vacancies</h2>
<p class="subtitle">Explore Opportunities: Find Your Dream Job</p>

<div class="search-card">
    @using (Html.BeginForm("searchjob_click", "userhome", FormMethod.Post))
    {
        <div class="search-grid">
            @Html.TextBoxFor(m => m.insertse.Job_Skills, new { placeholder = "Skills" })
            @Html.TextBoxFor(m => m.insertse.Job_Experience, new { placeholder = "Experience" })
            @Html.TextBoxFor(m => m.insertse.Job_Location, new { placeholder = "Location" })
            @Html.TextBoxFor(m => m.insertse.job_qualification, new { placeholder = "Qualification" })
            <input type="submit" value="Search" class="search-btn" />
        </div>
    }
</div>

<table class="job-table">
    <tr>
        <th>Company</th>
        <th>Job</th>
        <th>Description</th>
        <th>Experience</th>
        <th>Skills</th>
        <th>Pass out year</th>
        <th>End date</th>
        <th>Qualification</th>
        <th>Location</th>
        <th>Action</th>
    </tr>

    @foreach (var item in Model.selectjob)
    {
        <tr>
            <td>@item.Company_id</td>
            <td>@item.Job_Title</td>
            <td>@item.Job_description</td>
            <td>@item.Job_Experience</td>
            <td>@item.Job_Skills</td>
            <td>@item.passoutyear</td>
            <td>@item.Job_enddate.ToString("MM/dd/yyyy")</td>
            <td>@item.job_qualification</td>
            <td>@item.Job_Location</td>
            <td>
                @Html.ActionLink(
                    "Apply",
                    "Application_pageload",
                    "userhome",
                    new { job_id = item.Job_id },
                    new { @class = "apply-btn" })
            </td>
        </tr>
    }
</table>

