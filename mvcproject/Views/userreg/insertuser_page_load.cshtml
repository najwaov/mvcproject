@model mvcproject.Models.userinsert
@{
    ViewBag.Title = "insertuser_page_load";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f4f6f9;
    }

    h2 {
        text-align: center;
        color: #2c3e50;
        margin-bottom: 25px;
    }

    .register-card {
        width: 650px;
        margin: auto;
        background: #fff;
        padding: 25px;
        border-radius: 8px;
        box-shadow: 0 4px 10px rgba(0,0,0,0.1);
    }

    .form-group {
        margin-bottom: 15px;
    }

        .form-group label {
            font-weight: bold;
            color: #333;
            display: block;
            margin-bottom: 5px;
        }

        .form-group input[type="text"],
        .form-group input[type="password"],
        .form-group textarea {
            width: 100%;
            padding: 8px;
            border-radius: 4px;
            border: 1px solid #ccc;
            font-size: 14px;
        }

        .form-group textarea {
            resize: vertical;
            height: 60px;
        }

    .radio-group,
    .checkbox-group {
        margin-top: 5px;
    }

        .checkbox-group label {
            margin-right: 15px;
            font-weight: normal;
        }

    .validation {
        color: red;
        font-size: 12px;
    }

    .submit-btn {
        background-color: navy;
        color: white;
        border: none;
        padding: 10px 18px;
        border-radius: 4px;
        font-size: 15px;
        cursor: pointer;
    }

        .submit-btn:hover {
            background-color: #001f5f;
        }

    .success-msg {
        margin-top: 10px;
        font-weight: bold;
        color: green;
    }
</style>

<h2>User Registration</h2>

<div class="register-card">
    @using (Html.BeginForm("insertuser_click", "userreg", FormMethod.Post))
    {
        <div class="form-group">
            <label>Name</label>
            @Html.TextBoxFor(m => m.name)
            <div class="validation">@Html.ValidationMessageFor(m => m.name)</div>
        </div>

        <div class="form-group">
            <label>Age</label>
            @Html.TextBoxFor(m => m.age)
            <div class="validation">@Html.ValidationMessageFor(m => m.age)</div>
        </div>

        <div class="form-group">
            <label>Gender</label>
            <div class="radio-group">
                @Html.RadioButtonFor(m => m.gender, "Male") Male
                @Html.RadioButtonFor(m => m.gender, "Female") Female
            </div>
        </div>

        <div class="form-group">
            <label>Address</label>
            @Html.TextAreaFor(m => m.address)
            <div class="validation">@Html.ValidationMessageFor(m => m.address)</div>
        </div>

        <div class="form-group">
            <label>Phone</label>
            @Html.TextBoxFor(m => m.uphone)
            <div class="validation">@Html.ValidationMessageFor(m => m.uphone)</div>
        </div>

        <div class="form-group">
            <label>Skills</label>
            <div class="checkbox-group">
                @foreach (var item in Model.mskill)
                {
                    <label>
                        <input type="checkbox"
                               value="@item.value"
                               checked="@item.ischecked"
                               name="sskill" />
                        @Html.Raw(item.text)
                    </label>
                }
            </div>
        </div>

        <div class="form-group">
            <label>Years of Experience</label>
            @Html.TextBoxFor(m => m.yoe)
            <div class="validation">@Html.ValidationMessageFor(m => m.yoe)</div>
        </div>

        <div class="form-group">
            <label>Qualification</label>
            @Html.TextBoxFor(m => m.qua)
            <div class="validation">@Html.ValidationMessageFor(m => m.qua)</div>
        </div>

        <div class="form-group">
            <label>Email</label>
            @Html.TextBoxFor(m => m.email)
            <div class="validation">@Html.ValidationMessageFor(m => m.email)</div>
        </div>

        <div class="form-group">
            <label>Username</label>
            @Html.TextBoxFor(m => m.username)
        </div>

        <div class="form-group">
            <label>Password</label>
            @Html.PasswordFor(m => m.pass)
        </div>

        <div class="form-group">
            <label>Confirm Password</label>
            @Html.PasswordFor(m => m.cpassword)
            <div class="validation">@Html.ValidationMessageFor(m => m.cpassword)</div>
        </div>

        <input type="submit" value="Register" class="submit-btn" />

        <div class="success-msg">
            @Html.DisplayFor(m => m.usermsg)
        </div>
    }
</div>

